%h1 Create a new node
%form.well{ :action => "/nodes", :method => "post"}
  %label{:for => "name"}
    Node Name
  %input{:type => "text", :size => "30", :name => "name"}
  %label{:for => "name"}
    IP Address
  %input{:type => "text", :size => "30", :name => "ip"}
  %label{:for => "cluster"}
    Which cluster does this node belong to
  .input
  %select{:name => "zone_id"}
    - @zones.each do |z|
      %option{:value => z.id}= "#{z.props["name"]}"
  .input
    Recipe
  %select{:name => "command_id"}
    - @commands.each do |c|
      %option{:value => c.id}= "#{c.props["name"]}"
      
  %input{:type => "submit", :value => "Create", :class => "btn"}/